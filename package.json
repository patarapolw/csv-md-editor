{
  "name": "csv-md-editor",
  "version": "1.0.0",
  "description": "An enhanced CSV editor on Electron",
  "main": "./dist/main.bundle.js",
  "author": "Pacharapol Withayasakpunt",
  "license": "MIT",
  "devDependencies": {
    "@types/csv-parse": "^1.1.11",
    "@types/markdown-it": "^0.0.7",
    "@types/toastr": "^2.1.35",
    "css-loader": "^2.1.0",
    "electron": "4.0.1",
    "electron-builder": "^20.38.5",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.11.0",
    "rimraf": "^2.6.3",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.3",
    "typescript": "^3.2.4",
    "webpack": "^4.28.4",
    "webpack-cli": "^3.2.1"
  },
  "dependencies": {
    "csv-parse": "^4.3.0",
    "csv-stringify": "^5.2.0",
    "electron-is-running-in-asar": "^1.0.0",
    "handsontable": "^6.2.2",
    "markdown-it": "^8.4.2",
    "toastr": "^2.1.4"
  },
  "scripts": {
    "start": "electron ./dist/main.bundle.js",
    "dev": "rimraf dist && webpack --watch --config ./webpack.dev.js --progress --colors",
    "compile": "rimraf dist && webpack --config ./webpack.prod.js --progress --colors",
    "build": "rimraf build && yarn run compile && electron-builder"
  },
  "build": {
    "appId": "io.github.patarapolw.csv-md-editor",
    "directories": {
      "output": "build"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icon.png"
    },
    "fileAssociations": [
      {
        "ext": "csv",
        "role": "Editor"
      }
    ],
    "files": [
      "dist/**/*",
      "package.json"
    ]
  }
}
